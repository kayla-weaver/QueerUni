@model QueerUni.Models.track;
@using QueerUni.Models;
@using System.Collections.Generic;

<h2>track Details :P</h2>
<hr />
<h3>@Html.DisplayNameFor(model =>model.trackName): @Html.DisplayFor(model => model.trackName) </h3>

@if(@Model.Students.Count == 0)
{
<p>This track has zero students enrolled /:</p>
<p>@Html.ActionLink("Add Student", "Create", "Students")</p>
}
else
{
  <h4>All Students enrolled in track:</h4>
  <hr>
  <ul>
    @foreach(Student student in Model.Students)
{
  <p>@Html.ActionLink($"{student.Name}", "Details", new {id = student.StudentId}) </p>
}
  </ul>
}
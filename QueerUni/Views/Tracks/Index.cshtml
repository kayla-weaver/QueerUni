@{
  Layout = "_Layout";
}

@using QueerUni.Models;
<div class="container">
<div class="puff-in-hor">
<h1>track selection! :) </h1>
</div>
@if (@Model.Count == 0)
{
  <h3>NO trackS HAVE BEEN ADDED YET :(</h3>
}
<ul>
  @foreach(Track track in Model)
  {
    <li class="icon">@Html.ActionLink($"{track.TrackName}", "Details", new { id = track.TrackId})</li>
  }
</ul>

<p class="icon">@Html.ActionLink("Add new track", "Create")</p>
<p class="icon">@Html.ActionLink("Home", "Index", "Home")</p>
</div>
